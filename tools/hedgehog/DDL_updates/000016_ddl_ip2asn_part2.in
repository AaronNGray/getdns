eval $(@LIBEXEC@/conf_read)

DB_NAME=$hhconfig_database_name
DATA_DIR=$hhconfig_directories_data
SQ="'"

NEW_DDL_SERIAL=16
REQUIRED_DDL_SERIAL=$(( $NEW_DDL_SERIAL - 1 ))
NEW_API_VERSION=11
REQUIRED_API_VERSION=$(( $NEW_API_VERSION - 1 ))

DSC_SCHEMA="dsc"

usage () {
  echo
  echo "Usage: $(basename $0) options"
  echo
  echo "Supported options:"
  echo "  -h Show this help."
  echo "  -v Show version"
  exit 1
}

while getopts ":hP:U:v" opt; do
  case $opt in
    h  ) usage ;;
    v  ) echo "<VERSION>"
         exit 0 ;;
    \? ) usage ;;
  esac
done

# We need a write user. 
a=$(@LIBEXEC@/check_user_db_api -w -C $REQUIRED_API_VERSION -s $REQUIRED_DDL_SERIAL)
if [ $? -ne 0 ] ; then
  echo $a
  exit 1
fi
eval $a
export PGPASSWORD=$PGPASSWORD

echo "$(date): $0 COMMENCED"

DATASET=$(psql $CONN_STRING -qtc "SELECT id FROM dataset WHERE name = 'client_subnet_accum';")
DATASET2=$(psql $CONN_STRING -qtc "SELECT id FROM dataset WHERE name = 'client_addr_vs_rcode_accum';")

psql $CONN_STRING <<EOF
BEGIN;

WITH rows AS (
  INSERT INTO visible_plot (name, display_category, display_name, title) 
    VALUES ('asn','7.Client Subnet Statistics','Busiest Client ASNs','Busiest Client ASNs') 
    RETURNING id
) 
INSERT INTO dataset_visible_plot SELECT id, ${DATASET} FROM rows;

WITH rows AS (
  INSERT INTO visible_plot (name, display_category, display_name, title) 
    VALUES ('bgpprefix','7.Client Subnet Statistics','Busiest Client BGP Prefix','Busiest Clients by BGP Prefix') 
    RETURNING id
) 
INSERT INTO dataset_visible_plot SELECT id, ${DATASET} FROM rows;

WITH rows AS (
  INSERT INTO visible_plot (name, display_category, display_name, title) 
    VALUES ('client_addr_vs_rcode_accum_asn','7.Client Subnet Statistics','RCODE by Client ASNs','RCODE by Client ASNs') 
    RETURNING id
) 
INSERT INTO dataset_visible_plot SELECT id, ${DATASET2} FROM rows;

WITH rows AS (
  INSERT INTO visible_plot (name, display_category, display_name, title) 
    VALUES ('client_addr_vs_rcode_accum_bgpprefix','7.Client Subnet Statistics','RCODE by Client BGP Prefix','RCODE by Clients by BGP Prefix') 
    RETURNING id
) 
INSERT INTO dataset_visible_plot SELECT id, ${DATASET2} FROM rows;

UPDATE visible_plot SET title='Busiest client subnets (Fixed IPv4/8 or IPv6/32)', display_name='Busiest client subnets (Fixed size)' where name='client_subnet_accum';

UPDATE $DSC_SCHEMA.version SET version = $NEW_API_VERSION;
INSERT INTO $DSC_SCHEMA.internal_version ( serial, script, description, applied ) VALUES ( $NEW_DDL_SERIAL, '$0', 'Added new ip2asn functions', now() );
COMMIT;
EOF

echo "`date`: $0 COMPLETED"
