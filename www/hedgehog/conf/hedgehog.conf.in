<VirtualHost *:80>

	#ServerName www.example.com
	ServerAdmin webmaster@localhost
  
	Alias /hedgehog @HH_WEB_SOURCE@
	<Directory @HH_WEB_SOURCE@>
	    RSourceOnStartup @HH_WEB_SOURCE@/R/startup.R
	    Options None
	    AllowOverride None
	    order allow,deny
	    allow from all
	    DefaultType text/html
      Require all granted
	    DirectoryIndex hedgehog.html
	</Directory>

	<Directory @HH_WEB_SOURCE@/brew>
	    Options None
	    AllowOverride None
	    order allow,deny
	    allow from all
	    SetHandler r-script
      Require all granted
	    RHandler brew::brew
	</Directory>

	<Directory @HH_WEB_SOURCE@/images>
	    Options None
	    AllowOverride None
	    order allow,deny
	    allow from all
      Require all granted
	    SetHandler default-handler
	</Directory>

	<Directory @HH_WEB_SOURCE@/plots>
	    Options None
	    AllowOverride None
	    order allow,deny
	    allow from all
      Require all granted
	    SetHandler default-handler
	</Directory>

	<Directory @HH_WEB_SOURCE@/js>
	    Options None
	    AllowOverride None
	    order allow,deny
	    allow from all
      Require all granted
	    SetHandler default-handler
	</Directory>

	<Directory @HH_WEB_SOURCE@/R>
	    Options None
	    AllowOverride None
	    order allow,deny
	    allow from all
      Require all granted
	    SetHandler r-script
	</Directory>

	<Directory @HH_WEB_SOURCE@/stylesheets>
	    Options None
	    AllowOverride None
	    order allow,deny
	    allow from all
      Require all granted
	    SetHandler default-handler
	</Directory>
	
	Alias /plotcache @HH_PLOTCACHE@
	<Directory @HH_PLOTCACHE@>
	    Options None
	    AllowOverride None
	    order allow,deny
	    allow from all
      Require all granted
	    SetHandler default-handler
	</Directory>

	Alias /rssac @HH_RSSAC@
	<Directory @HH_RSSAC@>
	    Options Indexes
	    AllowOverride None
	    order allow,deny
      Require all granted
	    allow from all
	</Directory>	

	# Prints out a nice report about R running within Apache
	# Do not use this in production by default
	#<Location /RApacheInfo>
	#    SetHandler r-info
	#</Location>

	# Uncomment to allow data to be uploaded by clients with valid certificates
	# Alias /data @HH_DATA_DIR@
	# <Directory @HH_DATA_DIR@>
	#    DAV On
	#    SSLRequireSSL
	#    SSLVerifyClient require
	#    SSLVerifyDepth 1
	#    Options +Indexes
	# </Directory>
</VirtualHost>
